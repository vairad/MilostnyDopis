<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>


<GridPane fx:controller="gui.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <VBox spacing="10"
          alignment="center"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          GridPane.columnSpan="2">
        <Text text="Welcome"
              fx:id="labelTitle"
                />
    </VBox>
    <Label text="%serverAddressTitle" fx:id="labelServer"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <HBox spacing="2" alignment="bottom_left" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <TextField
                fx:id="ip1"
                />
        <Label text="."/>
        <TextField
                fx:id="ip2"
                />
        <Label text="."/>
        <TextField
                fx:id="ip3"
                />
        <Label text="."/>
        <TextField
                fx:id="ip4"
                />
        <Label text=":"/>
        <TextField
                fx:id="port"
                />
    </HBox>

    <Label text="Přezdívka:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="nickField"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <VBox spacing="10"
          alignment="top_center"
          GridPane.columnIndex="0"
          GridPane.rowIndex="4"
          GridPane.columnSpan="2"
            >
        <Button text="Nastav výchozí připojení"
                onAction="#handleLocallhost"/>
        <Button text="Připojit"
                onAction="#handleSubmitButtonAction"/>
    </VBox>
    <Text fx:id="statusText"
          GridPane.columnIndex="1" GridPane.rowIndex="6"/>

</GridPane>